<%
    array = [
        {
            href : '#',
            title : 'Home',
            icon : 'home',
        },
        {
            href : '#',
            title : 'User',
            icon : 'people',
        },
        {
            href : '#',
            title : 'Messages',
            icon : 'document',
        },
        {
            href : '#',
            title : 'Settings',
            icon : 'settings',
        },
        {
            href : '#',
            title : 'Help',
            icon : 'help',
        },
        {
            href : '#',
