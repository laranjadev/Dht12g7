<div id="sidebar-navigation" class="bg-white p-3 rounded shadow-sm">
    <div id="sidebar-content" class="rounded-1 shadow-sm bg-dark text-dark w-100 h-100">
        <ul>
            <% for (let i = 0; i < array['length']; i++) { %>
                <li id="sidebar-list" class="<%- !i ? 'active' : '' %>">
                    <a href=<%- array[i]['href']; %>>
                        <span id="sidebar-icon">
                            <%- '<ion-icon name=\"' + array[i]['icon'] + '\"></ion-icon>'; %>
                        </span>
                        <span id="sidebar-title">
                            <%- array[i]['title']; %>
                        </span>
                    </a>
                </li>
            <% } %>
        </ul>
    </div>
</div>